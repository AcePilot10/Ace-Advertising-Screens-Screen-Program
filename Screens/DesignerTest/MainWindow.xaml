<Window x:Class="Ace_Advertising_Screen.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ace_Advertising_Screen"
        mc:Ignorable="d"
        Title="Screen"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid Background="Blue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="62*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Background="Purple" x:Name="MainPanel">
            <Button Content="Button" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>
        <Grid Background="Red" x:Name="SidePanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="132*"/>
                <RowDefinition Height="137*"/>
            </Grid.RowDefinitions>
            <Button Content="Button" HorizontalAlignment="Stretch" Grid.Row="0" VerticalAlignment="Stretch" />
            <Button Content="Button" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" />
        </Grid>
    </Grid>
</Window>
